@model DataViewModel
@{
    Layout = "_SideLayout";
    var image_path = $"/Image/{Model.MeslekYuksekOkul.MeslekYuksekOkulResim}";
}
<section id="first-section">
    <div class="container-fluid side-content">
        <div class="row">
            <div class="col-md-5">
                <img src="@image_path" />
            </div>
            <div class="col-md-7">
                <h4>@Model.MeslekYuksekOkul.MeslekYuksekOkulAd</h4>
                <hr />
                <p>@Model.MeslekYuksekOkul.MeslekYuksekOkulAciklama</p>

                <h5>İletişim Bilgileri</h5>
                <ul>
                    <li>@Model.MeslekYuksekOkul.MeslekYuksekOkulAdres</li>
                    <li>@Model.MeslekYuksekOkul.MeslekYuksekOkulMail</li>
                    <li>@Model.MeslekYuksekOkul.MeslekYuksekOkulTel</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="overlay"><img src="~/imgs/campus-bg.jpg"></div>
</section>