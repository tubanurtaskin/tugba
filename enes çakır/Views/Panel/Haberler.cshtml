@model IEnumerable<Haber>
@{
    Layout = "_PanelLayout";
}
<div class="haberler">
    <center><h4><b>HABERLER</b></h4></center>
    <br />
    <a asp-controller="Panel" class="btn btn-outline-success" style="float:right" asp-action="EditHaberler">Haber Ekle</a>
    <br />
    <br />


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Başlık</th>
                <th scope="col">Kategori</th>
                <th scope="col">Tarih</th>
                <th scope="col">#</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var haber in Model)
            {
                <tr>
                    <th scope="row">@haber.Id</th>
                    <td>@haber.HaberBaslik</td>
                    <td>@haber.HaberKategori</td>
                    <td>@haber.HaberTarih</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Panel" asp-action="EditHaberler" asp-route-id="@haber.Id">Düzenle</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-controller="Panel" asp-action="RemoveHaber" asp-route-id="@haber.Id" >Kaldır</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>