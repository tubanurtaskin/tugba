@model YuksekokulDataViewModel
@{
    Layout = "_PanelLayout";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yüksekokul Ekle-Düzenle</h3>
    </div>
    <form asp-controller="Panel" asp-action="EditYuksekOkullar" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Yüksekokul Adı</label>
                <input asp-for="YuksekOkulAd" class="form-control" id="exampleInputEmail1" placeholder="Ad">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Yüksekokul Açıklaması</label>
                <textarea asp-for="YuksekOkulAciklama" class="form-control" rows="3" placeholder="Açıklama.." style="margin-top: 0px; margin-bottom: 0px; height: 75px;"></textarea>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
                <input type="email" asp-for="YuksekOkulMail" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Yüksekokul Telefon</label>
                <input type="tel" asp-for="YuksekOkulTel" class="form-control" id="exampleInputEmail1" placeholder="(0___) - ___ - __ - __">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Yüksekokul Adresi</label>
                <textarea asp-for="YuksekOkulAdres" class="form-control" rows="3" placeholder="Adres.." style="margin-top: 0px; margin-bottom: 0px; height: 75px;"></textarea>
            </div>


            <div class="form-group">
                <label for="exampleInputFile">Yüksekokul Görsel</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="hidden" asp-for="yukluYuksekOkulResim" class="custom-file-input" id="exampleInputFile">
                        <input type="file" asp-for="YuksekOkulResim" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Görsel Seçiniz...</label>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer" style="float:left;background-color:white">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
        <div class="card-footer" style="float:right;background-color:white">
            <button asp-controller="Panel" asp-action="YuksekOkullar" class="btn btn-warning">Geri Dön</button>
        </div>
    </form>
</div>

@section scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
}
