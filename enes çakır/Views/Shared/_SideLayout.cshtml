@model DataCollectionViewModel
@{

}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sideLayout.css">
    <title>Düzce Üniversitesi</title>
</head>

<body>
    <!--QUICK NAV-->
    <header>
        <nav>
            <ul class="nav__links">
                <li><a href="https://hastane.duzce.edu.tr/" target="_blank">Hastane</a></li>
                <li><a href="https://duzceteknopark.com.tr/" target="_blank">Teknopark</a></li>
                <li><a href="https://sanalsergi.duzce.edu.tr/" target="_blank">Sanat Galerisi</a></li>
                <li><a href="https://mbs.duzce.edu.tr/AnaSayfa.aspx" target="_blank">Mezunlar</a></li>
            </ul>
        </nav>
        <div class="contact">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="cta" asp-controller="Panel" target="_blank" asp-action="Index">Panel Girişi</a>
            }
            else
            {
                <a class="cta" asp-controller="Auth" target="_blank" asp-action="Login">Giriş Yap</a>
            }
            <a class="cta" href="https://www.instagram.com/duzceuniversite/" target="_blank"><i class="fab fa-instagram"></i></a>
            <a class="cta" href="https://twitter.com/duzceuniversite" target="_blank"><i class="fab fa-twitter"></i></a>
            <a class="cta" href="https://www.facebook.com/DuzceUniversite" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a class="cta" href="https://www.youtube.com/duzceuniversite" target="_blank"><i class="fab fa-youtube"></i></a>
        </div>
    </header>
    <!--MAIN NAV-->
    <div class="mainNavContainer container sticky" id="mainNavContainer">
        <img id="logo" src="~/imgs/logo.png">
        <div class="main-nav" id="main-nav">
            <ul class="nav__links">
                <li><a asp-controller="Home" asp-action="Index">Üniversitemiz</a></li>
                <li>
                    <a>Akademik <i class="fas fa-caret-down"></i></a>
                    <div class="dropdown__menu">
                        <ul>
                            <li>
                                <a href="#">Fakülteler</a>
                                <i class="fas fa-caret-right"></i>
                                <div class="dropdown__menu-1">
                                    <ul>
                                        @foreach (Fakulte fakulte in Model.Fakulteler)
                                        {
                                            <li><a asp-controller="Fakulte" asp-action="Index" asp-route-id="@fakulte.Id">@fakulte.FakulteAd</a></li>
                                        }
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="#">Ensitüler</a>
                                <i class="fas fa-caret-right"></i>
                                <div class="dropdown__menu-1">
                                    <ul>
                                        @foreach (Enstitu enstitu in Model.Enstituler)
                                        {
                                            <li><a asp-controller="Enstitu" asp-action="Index" asp-route-id="@enstitu.Id">@enstitu.EnsitutuAd</a></li>
                                        }
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="#">Yüksekokullar</a>
                                <i class="fas fa-caret-right"></i>
                                <div class="dropdown__menu-1">
                                    <ul>
                                        @foreach (YuksekOkul yuksekOkul in Model.YuksekOkullar)
                                        {
                                            <li><a asp-controller="YuksekOkul" asp-action="Index" asp-route-id="@yuksekOkul.Id">@yuksekOkul.YuksekOkulAd</a></li>
                                        }
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="#">M. Yüksekokulları</a>
                                <i class="fas fa-caret-right"></i>
                                <div class="dropdown__menu-1">
                                    <ul>
                                        @foreach (MeslekYuksekOkul meslekYuksekOkul in Model.MeslekYuksekOkullar)
                                        {
                                            <li><a  asp-controller="MeslekYuksekOkul" asp-action="Index" asp-route-id="@meslekYuksekOkul.Id">@meslekYuksekOkul.MeslekYuksekOkulAd</a></li>
                                        }
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
                <li><a asp-controller="Haber" asp-action="Index">Haberler</a></li>
                <li><a asp-controller="Duyuru" asp-action="Index">Duyurular</a></li>
                <li><a asp-controller="Etkinlik" asp-action="Index">Etkinlikler</a></li>
            </ul>
        </div>
    </div>

    @RenderBody()


