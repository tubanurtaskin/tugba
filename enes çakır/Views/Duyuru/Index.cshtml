@model DataViewModel
@{ 
    Layout = "_SideLayout";
}
<section id="first-section">
    <div class="container-fluid side-content">
        <h3 id="baslik" class="pt-3 px-3">DUYURULAR</h3>
        <hr/>
        <div class="row">
            @foreach (Duyuru duyuru in Model.Duyurular)
            {
                var image_path = $"/Image/{duyuru.DuyuruResim}";
                <div class="col-md-3 mb-4">
                    <a id="item" asp-controller="Duyuru" asp-action="Duyuru" asp-route-id="@duyuru.Id">
                        <div class="card">
                            <div class="top-line"></div>
                            <img src="@image_path" class="h-50" />
                            <div class="card-body">
                                <h5 class="card-title">@duyuru.DuyuruBaslik</h5>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">@duyuru.DuyuruTarih</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="overlay"><img src="~/imgs/campus-bg.jpg"></div>
</section>