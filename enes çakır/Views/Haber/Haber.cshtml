@model DataViewModel
@{
    Layout = "_SideLayout";
    var image_path = $"/Image/{Model.Haber.HaberResim}";
}
<section id="first-section">
    <div class="container-fluid side-content">
        <div class="row">
            <div class="col-md-5">
                <img src="@image_path" />
            </div>
            <div class="col-md-7">
                <h4 style="margin-bottom:0px;display:inline-block;">@Model.Haber.HaberBaslik</h4>
                <small class="text-muted" style="float:right"><b>@Model.Haber.HaberKategori | @Model.Haber.HaberTarih</b></small>
                <hr />
                <p>@Model.Haber.HaberAciklama</p>
            </div>
        </div>
    </div>
    <div class="overlay"><img src="~/imgs/campus-bg.jpg"></div>
</section>