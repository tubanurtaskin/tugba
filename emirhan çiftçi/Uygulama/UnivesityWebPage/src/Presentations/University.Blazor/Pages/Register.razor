@page "/register"
@layout LoginAndRegisterLayout

 <div class="h-full items-center flex justify-center">
      <section class="flex flex-col space-y-3 rounded-xl shadow-xl  w-[25%]">
        <div class="bg-red-500 transition-shadow hover:shadow-lg rounded-xl h-24 w-full drop-shadow-lg text-white flex items-center justify-center text-xl">
            Register
        </div>


        <div class="flex flex-col space-y-4 p-5">
            <div class="flex flex-col space-y-2">
                <label for="" class="font-semibold text-sm ml-1">Your Name</label>
                <label class="relative block">
                    <span class="sr-only">Search</span>
                    <span class="absolute inset-y-0 left-0 flex items-center pl-2">
                        
<svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" class="fill-current pointer-events-none text-gray-600 w-5 h-5"  ><path d="M0 0h24v24H0V0z" fill="none"/><path d="M19 5v14H5V5h14m0-2H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 9c-1.65 0-3-1.35-3-3s1.35-3 3-3 3 1.35 3 3-1.35 3-3 3zm0-4c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1zm6 10H6v-1.53c0-2.5 3.97-3.58 6-3.58s6 1.08 6 3.58V18zm-9.69-2h7.38c-.69-.56-2.38-1.12-3.69-1.12s-3.01.56-3.69 1.12z"/></svg>
                    </span>
                    <input
                        class="placeholder:italic placeholder:text-gray-400 block bg-white w-full border border-gray-300 rounded-2xl py-2 pl-9 pr-3 shadow-sm focus:outline-none  focus:ring-1 sm:text-sm"
                        placeholder="Jack Steve" type="text" name="name" />
                </label>
            </div>
            <div class="flex flex-col space-y-2">
                <label for="" class="font-semibold text-sm ml-1">Email</label>
                <label class="relative block">
                    <span class="sr-only">Search</span>
                    <span class="absolute inset-y-0 left-0 flex items-center pl-2">
                        
<svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" class="fill-current pointer-events-none text-gray-600 w-5 h-5"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/></svg>
                    </span>
                    <input
                        class="placeholder:italic placeholder:text-gray-400 block bg-white w-full border border-gray-300 rounded-2xl py-2 pl-9 pr-3 shadow-sm focus:outline-none  focus:ring-1 sm:text-sm"
                        placeholder="jack@gmail.com" type="email" name="email" />
                </label>
            </div>
            
            <div class="flex flex-col space-y-2">
                <label for="" class="font-semibold text-sm ml-1">Password</label>
                <label class="relative block">
                    <span class="sr-only">Search</span>
                    <span class="absolute inset-y-0 left-0 flex items-center pl-2">
                        
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="fill-current pointer-events-none text-gray-600 w-5 h-5" ><g fill="none"><path d="M0 0h24v24H0V0z"/><path d="M0 0h24v24H0V0z" opacity=".87"/></g><path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"/></svg>
                    </span>
                    <input
                        class="placeholder:italic placeholder:text-gray-400 block bg-white w-full border border-gray-300 rounded-2xl py-2 pl-9 pr-3 shadow-sm focus:outline-none  focus:ring-1 sm:text-sm"
                        placeholder="Please min 8 character" type="password" name="password" />
                </label>
            </div>
            <div class="flex flex-col space-y-2">
                <label for="" class="font-semibold text-sm ml-1">Confirm Password</label>
                <label class="relative block">
                    <span class="sr-only">Search</span>
                    <span class="absolute inset-y-0 left-0 flex items-center pl-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="fill-current pointer-events-none text-gray-600 w-5 h-5" ><g fill="none"><path d="M0 0h24v24H0V0z"/><path d="M0 0h24v24H0V0z" opacity=".87"/></g><path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"/></svg>

                    </span>
                    <input
                        class="placeholder:italic placeholder:text-gray-400 block bg-white w-full border border-gray-300 rounded-2xl py-2 pl-9 pr-3 shadow-sm focus:outline-none  focus:ring-1 sm:text-sm"
                        placeholder="Confirm Password..." type="password" name="confirmPassword" />
                </label>
            </div>
        </div>

        <button class="bg-red-400 hover:shadow-xl transition-colors hover:bg-white hover:text-red-500 hover:border-[1px] hover:border-solid hover:border-red-600 text-white rounded-lg text-center m-3 p-1">
            Create Account
        </button>
        
        <div class="flex justify-center items-center text-sm pb-5">
            <p>Already have an account ? <a class="text-red-500" href="#">Login</a></p>
        </div>

      </section>
    </div>


